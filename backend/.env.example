# Server configuration
PORT=4000
NODE_ENV=development

# Logging configuration
LOG_LEVEL=info  # Options: error, warn, info, http, verbose, debug, silly

# Diamnet configuration
DIAMNET_SECRET_KEY=your_secret_key_here

# Redis configuration (for scalable pub/sub and data storage)
# Set REDIS_ENABLED=true to enable Redis support
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Or use a Redis URL (takes precedence over individual settings if set)
# REDIS_URL=redis://username:password@localhost:6379/0
